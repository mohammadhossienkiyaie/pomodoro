{
  "name": "focusplus",
  "version": "1.0.0",
  "description": "A static simple pomodoro app .",
  "author": "mohammad kiyaie ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-packager . FocusPlus --overwrite --platform=win32 --arch=x64 --icon=resources/icons/appIcon.ico --out=dist --prune=true"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.example.focusplus",
    "asar": true,
    "files": [
      "main.js",
      "package.json",
      "node_modules/**/*",
      "resources/**/*"
    ],
    "win": {
      "icon": "resources/icons/appIcon.ico"
    }
  }
}
